<?xml version="1.0" encoding="iso-8859-15" standalone="yes"?>
<coll name="ContentFechaDatediff" title="XoneCollvacia" sql="select * from gen_pruebafecha" objname="pruebafecha" updateobj="pruebafecha" progid="ASData.CASBasicDataObj" cell-height="50p">
  <group name="GRID" id="1" />
  <prop group="1" name="MAP_FECHA" type="D" title="FECHA1" visible="4" forecolor="#000000" lmargin="5p" text-align="center" textfont-bold="true" onchange="Refresh" width="50%" />
  <prop group="1" name="MAP_FECHA2" type="D" title="FECHA2" visible="4" forecolor="#000000" lmargin="5p" text-align="center" textfont-bold="true" onchange="Refresh" newline="false" width="50%" />
  <prop group="1" name="FECHA" type="D" title="FECHA1" visible="1" forecolor="#000000" lmargin="5p" text-align="center" textfont-bold="true" onchange="Refresh" />
  <prop group="1" name="FECHA2" type="D" title="FECHA2" visible="1" forecolor="#000000" lmargin="5p" text-align="center" textfont-bold="true" onchange="Refresh" />
  <prop group="1" name="btn_sav" type="B" title="SALVAR FECHA" visible="1" method="ExecuteNode (salvar)" tmargin="10p" />
  <prop group="1" name="btn_cal" type="B" title="CALCULAR DIAS" visible="1" method="ExecuteNode (CALCULAR)" tmargin="10p" />
  <prop group="1" name="MAP_DIAS" type="N" title="DIFERENCIA DIAS" visible="1" forecolor="#000000" lmargin="5p" text-align="center" textfont-bold="true" onchange="Refresh" />
  <salvar>
    <action name="runscript">
      <script language="javascript">
                self.save();
            </script>
    </action>
  </salvar>
  <CALCULAR>
    <action name="runscript">
      <script language="javascript">
                if (isDate(self.FECHA) &amp;&amp; isDate(self.FECHA2)) {
                    self.MAP_DIAS=vbSupport.dateDiff("d", self.FECHA, self.FECHA2);
                } else
                    ui.msgBox("rellene las fechas antes de calcular","ATENCION!!!", 0);
                }
            </script>
    </action>
  </CALCULAR>
</coll>